<?xml version="1.0" encoding="UTF-8"?>
<queries>
    <query id="getAllAttendances">
        SELECT
        *
        FROM attendances
    </query>

    <query id="getCheckInAllAttendances">
        SELECT
        *
        FROM attendances
        where checkin_time is not null
    </query>

    <query id="getCheckOutAllAttendances">
        SELECT
        *
        FROM attendances
        where checkout_time is not null
    </query>

    <query id="getDateAttendances">
        SELECT
        *
        FROM attendances
        where attendance_date = ?
    </query>

    <query id="getStudentAttendance">
        SELECT
        *
        FROM attendances
        WHERE student_id = ?
    </query>

    <query id="getDeleteStudents">
        SELECT
        *
        FROM students
        WHERE status = 1
    </query>


    <query id="addStudent">
        INSERT INTO users (username, email, password_hash, role_id, created_at)
        VALUES (?, ?, ?, ?, now())
    </query>

    <query id="updateStudent">
        UPDATE users SET username = ?, email = ?, password_hash = ?, role_id = ? WHERE user_id = ?
    </query>

    <query id="deleteStudent">
        DELETE FROM users WHERE user_id = ?
    </query>
</queries>